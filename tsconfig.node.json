{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/electron/main/**/*", "src/electron/preload/**/*", "src/services/**/*", "./config.ts"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "paths": {
      "@services/*": [
        "./src/services/*"
      ],
      "@config": [
        "./config.ts"
      ]
    }
  }
}
